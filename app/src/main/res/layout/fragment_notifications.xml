<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layoutMargin"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/notifyMeButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/viewMarginTop"
        android:layout_weight="2"
        android:padding="@dimen/viewPadding"
        android:text="Notify Me" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/updateNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/viewMarginTop"
        android:layout_weight="2"
        android:padding="@dimen/viewPadding"
        android:text="Update Notification" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/cancelNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/viewMarginTop"
        android:layout_weight="2"
        android:padding="@dimen/viewPadding"
        android:text="Cancel Notification" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>